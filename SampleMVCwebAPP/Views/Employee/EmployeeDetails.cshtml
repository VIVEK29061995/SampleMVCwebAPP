@{
        ViewData["Title"] = "EmployeeDetails";

}
<h1>Employee Details</h1>
@using  (Html.BeginForm())
{
    <div class="container">
        <table class="table">
            <tr>
                <th>First Name :</th>
                <td>@Html.TextBox("firstName")</td>
            </tr>
            <tr>
                <th>Last Name :</th>
                <td>@Html.TextBox("lastName")</td>
            </tr>
             <tr>
                <th>Mobile Number</th>
                <td>
                    @Html.TextBox("phone")
                </td>
            </tr>
            <tr>
                <th>Salary</th>
                <td>
                    @Html.TextBox("Salary")
                </td>
            </tr>
            <tr>
                <th>Select Gender</th>
                <td>
                    @Html.RadioButton("Gender","Male") Male
                    @Html.RadioButton("Gender","Female") Female
                </td>
            </tr>
             <tr>
                <th>Select Shift</th>
                <td>
                    <input type="checkbox" value="1st shift" name="Shift" /> 1st shift
                    <input type="checkbox" value="2st shift" name="Shift" /> 2st shift
                    <input type="checkbox" value="3st shift" name="Shift" /> 3st shift
            </tr>
               <tr>
                <th>Select Emp Department </th>
                <td>
                    @Html.DropDownList("Options");
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Submit" />
                </td>
            </tr>


        </table>
    </div>
}